<Window x:Class="CSharpChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnConnect" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="25" Width="100" Margin="15,0,0,15" Click="btnConnect_Click">Connect</Button>
        <Button x:Name="btnSendMessage" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="25" Width="100" Margin="0,0,15,15" Click="btnSendMessage_Click">Send Message</Button>
        <TextBox x:Name="txtBoxMessage" VerticalAlignment="Bottom" Height="25" Margin="175,0,125,15"/>
        <TextBox x:Name="txtBoxChat" VerticalAlignment="Center" HorizontalAlignment="Center" 
                 Margin="15,10,15,45" Width="487" Height="265" 
                 BorderThickness="5" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" IsReadOnly="False"
                 Text="{Binding Mode=TwoWay, Path=ChatLog, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
